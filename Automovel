public class Automovel{
    
    public static void main(String[] args){
        Automovel fusca = new Automovel();
        
        fusca.marca = "Volkswagen";
        fusca.cor = "Black Piano";
        fusca.velocidade = 100;
        
        System.out.println("Marca: " + fusca.marca);
        System.out.println("Cor: " + fusca.cor);
        System.out.println("Velocidade: " + fusca.velocidade + "KM");
        fusca.acelerar();
        fusca.acelerar();
        fusca.reduzir();
    }
    
    String marca;
    String cor;
    int velocidade;
    
    void buzinar(){
        System.out.println("BEEEEEEEP...");
    }
    void acelerar(){
        velocidade = velocidade + 1;
    }
    void reduzir(){
        velocidade = velocidade - 1;
    }
}
  
